	"puppeteer": "^19.4.1"
  },
  "devDependencies": {
    "basic-auth": "^2.0.1",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.5",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mocha": "^10.2.0",
    "morgan": "^1.9.1"
  },
